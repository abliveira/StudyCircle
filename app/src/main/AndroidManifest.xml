<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abliveira.studycircle">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.abliveira.studycircle.ui.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoTitle"> <!-- DISABLE TOOLBAR IN MAIN ACTIVITY-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- PROFILE ACTIVITY -->
        <activity
            android:name="com.abliveira.studycircle.ui.ProfileActivity"
            android:label="@string/toolbar_title_login_activity"
            android:parentActivityName="com.abliveira.studycircle.ui.MainActivity"/>
        <!-- CHAT ACTIVITY -->
        <activity
            android:name="com.abliveira.studycircle.ui.ChatActivity"
            android:label="@string/toolbar_title_chat_activity"
            android:parentActivityName="com.abliveira.studycircle.ui.MainActivity"/>
        <!-- NOTIFICATION SERVICE -->
        <service
            android:name="com.abliveira.studycircle.notification.NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>